{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "trailingComma": "all",
  "printWidth": 80,
  "useTabs": true,
  "tabWidth": 2,
  "arrowParens": "always",
  "endOfLine": "lf",
  "multiline": true,
  "htmlWhitespaceSensitivity": "css"
}
